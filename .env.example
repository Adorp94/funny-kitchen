# PostgreSQL Database URL
DATABASE_URL=postgresql://postgres:password@localhost:5432/funny-kitchen

# Supabase URL and Key
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# AWS S3 for file storage (if used)
NEXT_PUBLIC_AWS_REGION=us-west-1
NEXT_PUBLIC_S3_BUCKET_NAME=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Auth0 Configuration (Server-side SDK)
AUTH0_SECRET=use-a-long-randomly-generated-string
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_SCOPE=openid profile email

# Auth0 Configuration (Client-side SDK)
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id

# API Tokens
BANXICO_TOKEN=your-banxico-token

# Vercel URL for production
VERCEL_URL=your-deployment-url 